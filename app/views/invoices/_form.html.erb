<%= form_for @invoice do |form| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% @invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :invoice_uid %>
    <%= form.text_field :invoice_uid %>
  </div>

  <div class="input-field">
    <%= form.label :status %>
    <%= form.select :status, Invoice::INVOICE_STATUSES.map { |s| [s] }, {}, {class: "simple-select"}%>
  </div>

  <div class="input-field">
    <%= form.label :emitter_id %>
    <%= form.select :emitter_id, User.all.collect{|u| [u.name, u.id]}, {}, {class: "simple-select"}%>
  </div>

  <div class="input-field">
    <%= form.label :receiver_id %>
    <%= form.select :receiver_id, User.all.collect{|u| [u.name, u.id]}, {}, {class: "simple-select"}%>
  </div>

  <div class="input-field">
    <%= form.label :amount_cents %>
    <%= form.number_field :amount_cents %>
  </div>

  <div class="input-field">
    <%= form.label :amount_currency %>
    <%= form.text_field :amount_currency %>
  </div>

  <div class="input-field">
    <%= form.label :emitted_at %>
    <div class="date-select">
      <%= form.date_select :emitted_at %>
    </div>
  </div>

  <div class="input-field">
    <%= form.label :expires_at %>
    <div class="date-select">
      <%= form.date_select :expires_at %>
    </div>
  </div>

  <div class="input-field">
    <%= form.label :signed_at %>
    <div class="date-select">
      <%= form.date_select :signed_at %>
    </div>
  </div>

  <div class="input-field">
    <%= form.label :cfdi_digital_stamp %>
    <%= form.text_field :cfdi_digital_stamp %>
  </div>

  <div class="form-actions">
    <%= form.submit %>
  </div>
<% end %>
